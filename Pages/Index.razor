@page "/"
@using CatalnWASM.Components
@inject NavigationManager NavigationManager

<MudItem xs="12" Class="mb-4" Style="overflow:hidden;background-color:#32333d;">
    <MudContainer Class="d-flex justify-center" Style="height:400px;align-items:center;">      
        <MudElement HtmlTag="div" Class="d-flex flex-column align-center" Style="z-index:10;position:absolute;">
            <MudText Typo="Typo.h1" Align="Align.Center">
                <span Style="@($"color:{Colors.Grey.Lighten4};font-weight: 500")">Cata</span><span Style="@($"color:{Colors.Blue.Lighten2};font-weight: 500")">ln</span>         
            </MudText>
            <MudText Class="my-4" Typo="Typo.h5" Align="Align.Center" Style="@($"color:{Colors.Grey.Lighten4};font-weight: 500")">The ultimate collection of online math resources</MudText>
        </MudElement>

        <MudElement HtmlTag="div" Style="position:relative;">
            <MudElement HtmlTag="div" Style="width:100%;filter:blur(5px);" >
                <video autoplay muted loop>
                    <source src="/extras/math_animations.mp4" type="video/mp4" />
                </video>                  
            </MudElement>     
        </MudElement>       
    </MudContainer>    
</MudItem>

<MudGrid Spacing="0">
    <MudItem Class="mt-4" xs="12" Style="z-index:10;">
        <MudContainer Class="d-flex flex-wrap justify-center">
            <PagePapers thisWidth="800px" BigText="What is Cataln?" SmallText="Cataln is a catalog of resources for various math fields. 
                The goal is to point individuals to the best resources to find information on each topic."/>
            
            <PagePapers thisWidth="800px" BigText="Why was Cataln made?" SmallText="Cataln was made to ease the difficulty of knowing where to look to learn math.
                Although there are many popular resources such as KhanAcademy, after a certain point resources like that don't exist or are not well known. Thus it becomes increasingly difficult
                to know where to look for information on higher level topics especially for those who are not guided by a university. Those who do not know better to know where to look or even
                what to look for are stuck without much hope for finding the information they require. Cataln acts as a highway to help route individuals to where they should be going to obtain
                this information." />

            <PagePapers thisWidth="800px" BigText="Where do I start?" SmallText="Start with the Navigation page, from there you can click on the field of interest and the relevant
                resources will be provided."/>
            
            <MudContainer Class="my-4 d-flex justify-center" xs="12" MaxWidth="MaxWidth.Small">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Rounded.Navigation" IconColor="Color.Inherit" OnClick="@((e) => NavigationManager.NavigateTo("/navigation"))">
                    Go To Navigation
                </MudButton>
		    </MudContainer>        
        </MudContainer>

        <MudContainer Class="mt-10 mb-4 d-flex justify-center" xs="12" MaxWidth="MaxWidth.ExtraSmall">
            <MudText >More questions? Head to the FAQ page.</MudText>
        </MudContainer>

        <MudContainer Class="my-2 mb-4 d-flex justify-center" xs="12" MaxWidth="MaxWidth.ExtraSmall">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Rounded.QuestionAnswer" IconColor="Color.Inherit" OnClick="@((e) => NavigationManager.NavigateTo("/faq"))">FAQ</MudButton>
		</MudContainer>           
    </MudItem>   
</MudGrid>

